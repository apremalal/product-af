  <!-- BOF App factory menu actionbar -->
    <div class="action-bar">
        <a href="/issuetracker/index.jag?appkey={{appkey}}" class="btn-action">
                <span class="fw-stack fw-lg btn-action-ico">
                    <i class="fw fw-ring fw-stack-2x"></i>
                    <i class="fw fw-left-arrow fw-stack-1x"></i>
                </span> Back to Issues
        </a>
    </div><!-- EOF App factory menu actionbar-->


    <div class="container-fluid cloud-container">
        <div class="row">
            <div class="col-md-5 forms">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="summary">Summary: </label>
                        <input type="text" class="form-control" id="summary" placeholder="Write a summary of your issue" value="{{issue.summary}}" disabled>{{issue.summary}}
                    </div>
                </div>
                <div class="col-md-6">
                <div class="form-group">
                    <label for="type">Type: </label>
                    <select id="type" class="form-control select2">
                        <option value="bug">Bug</option>
                        <option value="tasks">Task</option>
                        <option value="plus">New Feature</option>
                        <option value="arrow-up">Improvement</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="priority">Priority: </label>
                    <select id="priority" class="form-control select2">
                        <option value="angle-double-up">Highest</option>
                        <option value="angle-up">High</option>
                        <option value="angle-down">Low</option>
                        <option value="angle-double-down">Lowest</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="reporter">Reporter: </label>
                    <select id="reporter" class="form-control select2">
                        <option value="1">{{loggedInUser}}</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="version">Version: </label>
                    <select id="version" class="form-control select2">    
                    {{#each versions}}
                    <option value="{{id}}">{{version}}</option>
                    {{/each}}
                    </select>
                    </div>
                <div class="form-group">
                    <label for="severity">Severity: </label>
                    <select id="severity" class="form-control select2">
                        <option value="ban">Blocker</option>
                        <option value="exclamation">Critical</option>
                        <option value="circle-o">Non Critical</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="assignee">Assignee: </label>
                      <select id="assignee" class="form-control select2">
                      {{#each users}}
                      <option value="{{name}}">{{name}}</option>
                      {{/each}}
                      </select>
    
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="description">Description: </label>
                    <textarea class="form-control" rows="3" id="description" placeholder="Write a small description a" value="{{issue.description}}">{{issue.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="button" class="cu-btn cu-btn-sm cu-btn-blue" id="editIssue">
                        <span class="fw-stack fw-lg btn-action-ico">
                            <i class="fw fw-ring fw-stack-2x"></i>
                            <i class="fw fw-add fw-stack-1x"></i>
                        </span>
                        Update Issue
                    </button>
                    <input type="hidden" name="userName"  id="userName" value='<%= session.get("LOGGED_IN_USER") %>'/>
                </div>
                <div class="clearfix"></div>
                <div id="push"></div>
                <div id="push"></div>
            </div>
        </div>
    </div><!-- /.container -->
